
<div class="row form-group justify-content-center" style="background: #06113C;">
  <div class="col-sm-6 field">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :discogs_username,
                      required: false,
                      hint: ("Make sure your wantlist is set to public in discogs"),
                      autofocus: true,
                      input_html: { autocomplete: "discogs-username" }%>
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first-name" }%>
          <%= f.input :last_name,
                      required: true,
                      input_html: { autocomplete: "last-name" }%>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :country,
                      collection: User::NATIONS, prompt: 'Select nationality',
                      required: false,
                      input_html: { autocomplete: "country" } %>
          <%= f.input :postcode,
                      required: false,
                      input_html: { autocomplete: "postcode" }%>
          <%= f.input :address,
                      required: false,
                      input_html: { autocomplete: "address" }%>
          <%= f.input :phone_number,
                      required: false,
                      input_html: { autocomplete: "phone-number" }%>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", style: "color: orange;" %>
            <%= render "devise/shared/links" %>
          </div>

      </div>


  </div>
</div>

  <% end %>
