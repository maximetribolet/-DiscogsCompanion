  <%= simple_form_for @alerts do |f| %>
    <%= f.error_notification %>

  <% f.hidden_field_tag :product_id %>
  <% f.hidden_field_tag :user_id %>
  <%= f.input :min_condition
              collection: Alerts::MIN_CONDITION, prompt: 'Select Minimum Condition',
              required: true %>
  <%= f.input :min_sleeve_condition
              collection: Alerts::MIN_SLEEVE_CONDITION, prompt: 'Select Sleeve Condition',
              required: false %>
  <%= f.input :country
              collection: Alerts::NATIONS, prompt: 'Select country',
              required: true
  <%= f.input :max_price
              required: true %>
  <%= f.input :alert_during_days
              required: false %>
  <%= f.input :seller_rating
              required: false%>
  <%= f.button :submit %>
  <% end %>
  <% end %>
